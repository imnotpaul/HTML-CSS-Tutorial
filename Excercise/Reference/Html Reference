<!-- CLASS & ID -->
.box â†’
<div class="box"></div>
#main â†’
<div id="main"></div>
div#app â†’
<div id="app"></div>
span.item â†’ <span class="item"></span>

<!-- MULTIPLY -->
div*3 â†’ 3 divs .card*4 â†’ 4 divs with class="card"

<!-- CHILD (>) -->
div>p â†’
<div>
    <p></p>
</div>
ul>li*3 â†’ list with 3 items

<!-- SIBLING (+) -->
h1+p â†’
<h1></h1>
<p></p>
div+span â†’
<div></div><span></span>

<!-- CLIMB UP (^) -->
div>p>span^a â†’
<div>
    <p><span></span></p>
    <a></a>
</div>

<!-- GROUPING ( ) -->
div>(header>ul>li*2)+footer â†’
<div>
    <header>
        <ul>
            <li></li>
            <li></li>
        </ul>
    </header>
    <footer></footer>
</div>

<!-- NUMBERING ($) -->
.item$*3 â†’
<div class="item1"></div>
<div class="item2"></div>
<div class="item3"></div>

ul>li.item$*3 â†’
<ul>
    <li class="item1"></li>
    <li class="item2"></li>
    <li class="item3"></li>
</ul>

<!-- TEXT CONTENT ({}) -->
a{Click me} â†’ <a href="">Click me</a> p{Hello World} â†’
<p>Hello World</p>

<!-- ATTRIBUTES ([]) -->
input[type=text] â†’ <input type="text"> img[src=img.jpg alt=photo] â†’ <img src="img.jpg" alt="photo">

<!-- COMBO EXAMPLES -->
div>.column*2>.box*2 â†’
<div>
    <div class="column">
        <div class="box"></div>
        <div class="box"></div>
    </div>
    <div class="column">
        <div class="box"></div>
        <div class="box"></div>
    </div>
</div>

