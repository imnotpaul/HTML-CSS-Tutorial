📖 WHATWG HTML Standard: https://html.spec.whatwg.org/

</body>
</html>

<!-- ============================= -->
<!-- Deprecated / Obsolete Elements -->
<!-- For legacy awareness, avoid using in modern HTML -->
<!-- ============================= -->
<acronym title="World Wide Web">WWW</acronym> <!-- Use <abbr> instead -->
<applet code="Applet.class">Applet fallback</applet> <!-- Use <object> or JS instead -->
<basefont size="3" color="red" face="Arial"> <!-- Font styling, use CSS instead -->
<center>Centered text</center> <!-- Use CSS: text-align:center; -->
<dir>Directory list</dir> <!-- Use <ul> instead -->
<font color="red" size="3" face="Arial">Font styling</font> <!-- Use CSS -->
<s>Strikethrough text</s> <!-- Use <del> or CSS -->
<strike>Strikethrough text</strike> <!-- Use <del> or CSS -->
<u>Underline text</u> <!-- Semantics in HTML5; CSS preferred -->

<!-- ============================= -->
<!-- Microdata / Metadata / SEO Elements -->
<!-- Commonly used for search engines & social media previews -->
<!-- ============================= -->
<meta name="description" content="Page description"> <!-- SEO description -->
<meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Mobile responsiveness -->
<meta property="og:title" content="Page Title"> <!-- Open Graph title for social media -->
<meta property="og:description" content="Page description"> <!-- Open Graph description -->
<meta property="og:image" content="image.jpg"> <!-- Open Graph thumbnail image -->
<meta name="twitter:card" content="summary_large_image"> <!-- Twitter card type -->
<meta name="twitter:title" content="Page Title"> <!-- Twitter card title -->
<meta name="twitter:description" content="Page description"> <!-- Twitter card description -->
<meta name="twitter:image" content="image.jpg"> <!-- Twitter card image -->
<link rel="canonical" href="https://example.com/page-url"> <!-- Prevent duplicate content in SEO -->

<!-- ============================= -->
<!-- Common HTML5 APIs (JS-related, for modern interactive web apps) -->
<!-- ============================= -->
<!-- Web Storage -->
<script>
  localStorage.setItem("theme", "dark");  // Store data locally
  let theme = localStorage.getItem("theme"); // Retrieve stored data
</script>

<!-- Canvas API -->
<canvas id="myCanvas" width="200" height="100"></canvas> <!-- For drawing, charts, games -->

<!-- Geolocation -->
<script>
  navigator.geolocation.getCurrentPosition(
    position => console.log(position.coords.latitude, position.coords.longitude)
  ); // Get user location
</script>

<!-- Drag & Drop -->
<div draggable="true" ondragstart="console.log('Dragging')">Drag me</div> <!-- Drag & drop support -->

<!-- Web Workers -->
<script>
  // Background processing without freezing UI
  // let worker = new Worker("worker.js");
</script>

<!-- File API -->
<input type="file" id="fileInput">
<script>
  const fileInput = document.getElementById("fileInput");
  fileInput.addEventListener("change", (e) => {
    const file = e.target.files[0];
    console.log(file.name, file.size);
  });
</script>

