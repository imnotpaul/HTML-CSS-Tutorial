/* ===================== CSS SELECTOR ===================== */

/* 1. Universal Selector (*) â†’ all elements */
* {
  margin: 0;
  padding: 0;
}

/* 2. Type Selector â†’ all elements of a specific type */
p {
  color: blue; /* all <p> tags */
}

/* 3. Class Selector (.) â†’ elements with a specific class */
.button {
  background: red; /* all elements with class="button" */
}

/* 4. ID Selector (#) â†’ single element with a specific ID */
#header {
  font-size: 24px; /* element with id="header" */
}

/* 5. Grouping Selector (,) â†’ apply styles to multiple selectors */
h1, h2, h3 {
  font-family: Arial; /* all h1, h2, h3 */
}

/* 6. Descendant Selector (space) â†’ elements inside another element */
div p {
  color: green; /* <p> inside <div> */
}

/* 7. Child Selector (>) â†’ direct children only */
ul > li {
  list-style: none; /* only direct <li> children of <ul> */
}

/* 8. Adjacent Sibling Selector (+) â†’ immediately after another element */
h1 + p {
  margin-top: 0; /* first <p> after <h1> */
}

/* 9. General Sibling Selector (~) â†’ all siblings after an element */
h1 ~ p {
  color: gray; /* all <p> after <h1> */
}

/* 10. Attribute Selector ([]) â†’ elements with specific attributes */
input[type="text"] {
  border: 1px solid black;
}

/* 11. Pseudo-classes (:) â†’ elements in a special state */
a:hover {
  color: red; /* mouse hover state */
}
li:first-child {
  font-weight: bold; /* first <li> */
}

/* 12. Pseudo-elements (::) â†’ part of an element */
p::first-letter {
  font-size: 2em;
  color: blue; /* first letter of <p> */
}

/* ==================CSS Transition Timing Function================== */ 
transition: background-color 0.15s ease, box-shadow 0.15s ease;
   
linear       â€“ same speed start to end (robotic)
   ease         â€“ slow start & end, fast middle (natural)
   ease-in      â€“ slow start, fast end
   ease-out     â€“ fast start, slow end
   ease-in-out  â€“ slow start & end, fast middle (smooth)
   cubic-bezier â€“ custom speed control (advanced)
   steps(n)     â€“ jumps in n steps (typewriter or sprite effect)

